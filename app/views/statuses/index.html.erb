<h1>All statuses</h1>

<% @statuses.each do |status| %>
  <%= status.name %>
  <%= status.content %> 
  <p>
    <%= link_to "Edit", edit_status_path(status) %>
    |
    <%= link_to "Delete", status, method: :delete, confirm: "Are you sure?" %>
  </p>
<% end %>
<p>
  <%= link_to "Create new post", new_status_path %>
</p>